# ============================================
# SERVER ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git!

# ============================================
# DATABASE
# ============================================
CONNECT_DB=mongodb://localhost:27017/your-database-name
# Hoặc MongoDB Atlas:
# CONNECT_DB=mongodb+srv://username:password@cluster.mongodb.net/database-name

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
URL_CLIENT=http://localhost:5173

# ============================================
# ENCRYPTION & SECURITY
# ============================================
# Secret key cho AES encryption (phải giống với VITE_SECRET_CRYPTO ở client)
# Chạy: node generate-secret.js để tự động generate
SECRET_CRYPTO=your-secret-crypto-key-here

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Gmail SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-app-password-here

# ============================================
# AI/CHATBOT (Optional)
# ============================================
GROQ_API_KEY=your-groq-api-key-here

# ============================================
# PAYMENT GATEWAYS (Optional)
# ============================================

# VNPay
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3000/api/payment/vnpay-return

# Momo
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key
MOMO_PARTNER_CODE=your-momo-partner-code

# ZaloPay
ZALOPAY_APP_ID=your-zalopay-app-id
ZALOPAY_KEY1=your-zalopay-key1
ZALOPAY_KEY2=your-zalopay-key2
ZALOPAY_SANDBOX_URL=https://sb-openapi.zalopay.vn/v2/create
ZALOPAY_CALLBACK_URL=http://localhost:3000/api/payment/zalopay

# ============================================
# NOTES
# ============================================
# 1. SECRET_CRYPTO phải giống với VITE_SECRET_CRYPTO ở client/.env
# 2. Chạy: node generate-secret.js để tự động generate SECRET_CRYPTO
# 3. Không commit file .env vào Git!
# 4. Đổi tất cả secret keys nếu đã lỡ commit .env lên GitHub

